<!DOCTYPE HTML>
<html>
  <head>
    <meta content="text/html; charset=utf-8" http-equiv="Content-type">
    <title>Drop Tweet</title>
    <link rel="stylesheet" href="/css/master.css" type="text/css" media="screen" title="no title">
  </head>
  
  <body>
    <div id="tweet_container" class="cf">
      <div id="logo_container">
        <h1 id="logo">Tweet Drop</h1>
      </div>
      <div id="drop_section">
        <div id="drop_target"></div>
        <div id="drag_n_drop_text"></div>
      </div>
      <div id="success_section" class="hidden">
        <div class="success_image"></div>
        <div class="success_msg"></div>
      </div>
      <div id="tweet_interface">
        <div id="dropped_image_container" class="cf">
          <div id="dropped_image"></div>
          <div id="progress_bar"></div>
        </div>
        <div class="caption_container hidden">
          <input id="temp_filename" type="hidden">
          <input id="tweet_caption" type="text" placeholder="Add a caption">
          <button id="send_btn" type="button">Tweet</button>
        </div>
      </div>
    </div>
    
    <script src="/javascripts/jquery-1.7.1.js" type="text/javascript"></script>
    <script src="/javascripts/jquery-ui-1.8.17.custom.min.js" type="text/javascript"></script>
    <script src="/javascripts/jquery.dnduploader.js" type="text/javascript"></script>

    <script type="text/javascript">
      $("body").dndUploader({
        url : "/",
        method : "PUT"
      });
    </script>
  </body>
</html>
